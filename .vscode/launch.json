	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Start Dev Server",
			"program": "${workspaceFolder}/dev.mjs",
			"console": "integratedTerminal",
			"skipFiles": ["<node_internals>/**"]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Run Tests",
			"runtimeExecutable": "npm",
			"args": ["test"],
			"console": "integratedTerminal",
			"skipFiles": ["<node_internals>/**"]
		},
		{
			"name": "Chrome (localhost:3001)",
			"type": "chrome",
			"request": "launch",
			"url": "http://localhost:3001",
			"webRoot": "${workspaceFolder}/src",
			"sourceMapPathOverrides": {
				"webpack:///src/*": "${webRoot}/*"
			}
		}
	]
}
